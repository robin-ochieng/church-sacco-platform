{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "test/**/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
